class Solution {
    public boolean isPalindrome(int x) {
        if(x<0)
        {
            return false;
        }
        int original=x;
        int rev=0;
        
        while(x!=0)
        
        {
            int rem=x%10;
            rev=(rev*10)+rem;
            x=x/10;
        }
        return rev==original;
    }
    public static void main(String args[])
    {
        Scanner sc=new Scanner(System.in);
        int x=sc.nextInt();
        Solution sol=new Solution();
        boolean result=sol.isPalindrome(x);
        
            System.out.println(result);
        }
    }
