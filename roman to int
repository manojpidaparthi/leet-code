class Solution {
    public int romanToInt(String s) {
        int total=0;
        int curr= 0;

        for(int i=0;i<s.length();i++){
            curr=character(s.charAt(i));
            if(i<s.length()-1&&curr<character(s.charAt(i+1)))
            {
                total-=curr;
            }
            else{
               total+=curr;
            }

        }
        return total;
    }
    public int character(char ch){
        switch(ch){
            case 'I': return 1;
            case 'V': return 5; 
            case 'X': return 10;
            case 'L': return 50; 
            case 'C': return 100;
            case 'D': return 500;
            case 'M': return 1000; 
            
        }
        return 0;
    }
    public static void main(String args[]){
        Scanner sc=new Scanner(System.in);
        String s=sc.next();
        Solution sol=new Solution();
        int result=sol.romanToInt(s);
        System.out.print(result);
    }
}
